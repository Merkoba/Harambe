{% extends "base.jinja" %}

{% block head %}
<title>Register</title>
<link rel="stylesheet" href="static/css/login.css">
<script src="/static/js/main/register.js"></script>
{% endblock %}

{% block body %}
<div id="main">
    {% if message %}
    <div id="message">{{message}}</div>
    {% endif %}

    <form id="form" action="/register" method="post">
        {% if captcha %}
        <div style="background-color: white; padding: 0.35rem; user-select: none;">{{captcha}}</div>
        <input type="hidden" name="captcha_key" value="{{captcha_key}}">
        <input type="text" id="solution" name="solution" placeholder="Solution" required>
        {% endif %}

        {% if register_code %}
        <input type="text" id="code" name="code" placeholder="Code">
        {% endif %}

        <input type="text" id="username" name="username" placeholder="Username" required>
        <input type="password" id="password" name="password" placeholder="Password (1)" required>
        <input type="password" id="password_2" name="password_2" placeholder="Password (2)" required>
        <input type="text" id="name" name="name" placeholder="Public Name">
        <input type="submit" id="register" value="Register New Account">
    </form>
</div>
{% endblock %}
