{% extends "base.jinja" %}

{% block head %}
{% block admin_head %}{% endblock %}
<link rel="stylesheet" href="/static/css/admin.css">
<script src="/static/js/main/admin.js"></script>
{% endblock %}

{% block body %}
<template id="template_post_edit">
    <div class="dialog_container">
        <div>
            <div id="edit_title" class="aero_button">Edit Title</div>
        </div>
    </div>
</template>

<template id="template_user_edit">
    <div class="dialog_container">
        <div class="dialog_row">
            <div id="edit_poster_yes" class="aero_button">Poster: Yes</div>
            <div id="edit_poster_no" class="aero_button">Poster: No</div>
        </div>

        <div class="dialog_row">
            <div id="edit_reacter_yes" class="aero_button">Reacter: Yes</div>
            <div id="edit_reacter_no" class="aero_button">Reacter: No</div>
        </div>

        <div class="dialog_row">
            <div id="edit_reader_yes" class="aero_button">Reader: Yes</div>
            <div id="edit_reader_no" class="aero_button">Reader: No</div>
        </div>

        <div class="dialog_row">
            <div id="edit_lister_yes" class="aero_button">Lister: Yes</div>
            <div id="edit_lister_no" class="aero_button">Lister: No</div>
        </div>

        <div class="dialog_row">
            <div id="edit_admin_yes" class="aero_button">Admin: Yes</div>
            <div id="edit_admin_no" class="aero_button">Admin: No</div>
        </div>

        <div class="dialog_row">
            <div id="edit_rpm" class="aero_button">RPM</div>
            <div id="edit_max_size" class="aero_button">Max Size</div>
        </div>

        <div class="dialog_row">
            <div id="edit_name" class="aero_button">Name</div>
            <div id="edit_mark" class="aero_button">Mark</div>
        </div>

        <div class="dialog_row">
            <div id="edit_username" class="aero_button">Username</div>
            <div id="edit_password" class="aero_button">Password</div>
        </div>
    </div>
</template>

<div id="sample_container" class="hidden">
    <div id="sample_title_container">
        <div id="sample_prev" class="sample_title_button">⏪</div>
        <div id="sample_title"></div>
        <div id="sample_next" class="sample_title_button">⏩</div>
    </div>

    <img id="sample_image" class="sample_content hidden">
    <video id="sample_video" controls poster="/static/img/cover.jpg" class="sample_content hidden"></video>
    <div id="sample_text" class="sample_content hidden"></div>
    <div id="sample_close">Close</div>
</div>

<div id="container">
    <div id="top" class="nowrap">
    {% block admin_top %}{% endblock %}
    </div>

    <div id="items">
    {% block admin_items %}{% endblock %}
    </div>
</div>

{% endblock %}