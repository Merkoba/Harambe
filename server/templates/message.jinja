{% extends "base.jinja" %}

{% block head %}
<title>Message</title>
<link rel="stylesheet" href="/static/css/message.css">
{% endblock %}

{% block body %}
<div id="main">
    <div id="message">
        {% if mode == "error" %}
        <div>❌</div>
        {% endif %}
        {{message|safe}}
    </div>

    <a href="/" class="no_expand"><img src="/static/img/return.jpg"></a>
</div>
{% endblock %}